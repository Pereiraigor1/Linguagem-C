algoritmo "leia um número inteiro e escreva seu sucessor e antecessor"

var

Numero,sucessor,antecessor: inteiro

inicio

   escreva(" Digite um Número: ")
   leia(Numero)
   sucessor <- Numero+1
   antecessor <- Numero-1
   escreva("O sucessor do número ",Numero," é ",sucessor," e o antecessor é ",antecessor )
   
   
   fimalgoritmo